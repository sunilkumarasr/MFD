<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5dp"
    app:cardCornerRadius="@dimen/_8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/color_order_back">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_product"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_5dp"
            android:src="@drawable/loading_ic"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginRight="@dimen/_5dp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <com.royalit.mfd.customviews.CustomTextView
                    android:id="@+id/txt_prodcut_name"
                    app:fontFamily="@font/poppins_regular"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T-Shirt"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />
                <com.royalit.mfd.customviews.CustomTextView
                    android:id="@+id/txt_prodcut_date"
                    android:padding="@dimen/_0dp"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_height="@dimen/_20dp"
                    android:text=""
                    android:textColor="@color/color_order_date"
                    android:textSize="@dimen/_12sp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/txt_descriptiom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text=""
                android:textSize="@dimen/_14sp"
                android:maxLines="2"
                android:fontFamily="@font/roboto_regular"
                android:ellipsize="end"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical"
                >
                <TextView style="@style/style_textview_small"
                    android:id="@+id/txt_net_price"
                    android:fontFamily="@font/roboto_regular"
                    android:text=""
                    android:textSize="@dimen/_18sp"
                    />
                <View style="@style/style_textview_small"
                    android:layout_height="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text=""
                    android:layout_margin="2dp"
                    android:background="@color/black"
                    android:layout_width="1dp"
                    android:rotation="12"
                    android:textSize="@dimen/_18sp"
                    />
                <TextView style="@style/style_textview_small"
                    android:id="@+id/txt_actual_price"
                    android:textStyle="bold"
                    android:text=""
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/strike_through"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_16sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_add_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/_10dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_height="@dimen/_28dp"
                    android:minHeight="@dimen/_20dp"
                    android:text="@string/addItem"
                    android:textSize="@dimen/_14sp"
                    android:clickable="false"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_width="@dimen/_120dp"
                    android:background="@drawable/rectangle_add_item"
                    android:padding="@dimen/_0dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>